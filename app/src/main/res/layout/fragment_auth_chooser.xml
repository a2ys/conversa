<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="dev.a2ys.conversa.authentication.fragments.AuthChooserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="32dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/header_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to"
            style="@style/TextAppearance.Conversa.HeadlineLarge"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/header_conversa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conversa"
            android:textColor="@color/seed"
            android:textStyle="bold"
            style="@style/TextAppearance.Conversa.DisplayLarge"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/email_auth_button"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Continue with Email"
            app:layout_constraintTop_toBottomOf="@id/header_conversa"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/phone_auth_button"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Continue with Phone Number"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>