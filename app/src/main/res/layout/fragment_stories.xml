<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="dev.a2ys.conversa.main.fragments.StoriesFragment">

    <ImageView
        android:id="@+id/wait_illustration"
        android:layout_width="224dp"
        android:layout_height="224dp"
        android:src="@drawable/waiting"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/seed"
        android:padding="32dp"
        app:layout_constraintTop_toBottomOf="@id/wait_illustration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Updates section is coming soon!"
        style="@style/TextAppearance.Conversa.HeadlineSmall"
        android:textAlignment="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>